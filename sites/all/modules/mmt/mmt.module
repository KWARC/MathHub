function mmt_config_validate($form, &$form_state) {
  $mmturl = $form_state['values']['mmt_instance_url'];
  if (trim($mmturl) == '') {
    form_set_error('mmt_instance_url', t('MMT URL cannot be empty'));
  }

  $mmt_repo_type = $form_state['values']['mmt_repository_type'];
  if ($mmt_repo_type == '') {
    form_set_error('mmt_repository_type', t('Please choose repository type'));
  }

  $mmt_repo_options = $form_state['values']['mmt_repository_options'];
  if ($mmt_repo_type == 2) { //source folder
    $pair = explode(' ', $mmt_repo_options);
    if (count($pair) != 2) {
      form_set_error('mmt_repository_options', t('Invalid repository options "' . $mmt_repo_options .  '", must be space-separated pair of archive name and docbase'));
    }
  }

  $formats_S = $form_state['values']['mmt_archive_formats'];
  $formats_lines = explode("\n", $formats_S);
  foreach ($formats_lines as $line) {
    $pair = explode(' ', $line);
    if (count($pair) != 2) {
      form_set_error('mmt_archive_formats', t('Invalid line "' . $line .  '", must be space-separated pair of archive and text format'));
    }
  }

  $node_types_S = $form_state['values']['mmt_format_node_types'];
  $node_types_lines = explode("\n", $node_types_S);
  foreach ($node_types_lines as $line) {
    $pair = explode(' ', $line);
    if (count($pair) != 2) {
      form_set_error('mmt_format_node_types', t('Invalid line "' . $line .  '", must be space-separated pair of text format and nodetype'));
    }
  }
  
  $extensions_S = $form_state['values']['mmt_format_extensions'];
  $extensions_lines = explode("\n", $extensions_S);
  foreach ($extensions_lines as $line) {
    $pair = explode(' ', $line);
    if (count($pair) != 2) {
      form_set_error('mmt_format_extensions', t('Invalid line "' . $line .  '", must be space-separated pair of format and extension'));
    }
  }
}

function mmt_config_submit($form, &$form_state) {
  $formats_S = $form_state['values']['mmt_archive_formats'];
  $node_types_S = $form_state['values']['mmt_format_node_types'];
  $extensions_S = $form_state['values']['mmt_format_extensions'];
  $mmturl = $form_state['values']['mmt_instance_url'];
  $repo_type = $form_state['values']['mmt_repository_type'];
  $repo_opt = $form_state['values']['mmt_repository_options'];

  mmt_config_set($mmturl, $repo_type, $repo_opt, $formats_S, $node_types_S, $extensions_S);
}

function mmt_config_set($mmturl, $repo_type, $repo_opt, $formats_S, $node_types_S, $extensions_S) {

  $formats_lines = explode("\n", $formats_S);
  $formats = array();
  foreach ($formats_lines as $line) {
    if (trim($line) != '') {
      $pair = explode(' ', $line);
      $formats[trim($pair[0])] = trim($pair[1]);
    }
  }

  $node_types_lines = explode("\n", $node_types_S);
  $node_types = array();
  foreach ($node_types_lines as $line) {
    if (trim($line) != '') {
      $pair = explode(' ', $line);
      $node_types[trim($pair[0])] = trim($pair[1]);
    }
  }

  $extensions_lines = explode("\n", $extensions_S);
  $extensions = array();
  foreach ($extensions_lines as $line) {
    if (trim($line) != '') {   
      $pair = explode(' ', $line);
      $extensions[trim($pair[0])] = trim($pair[1]);
    }
  }
  
  $mmt_config = array();
  $mmt_config['formats'] = $formats;
  $mmt_config['node_types'] = $node_types;
  $mmt_config['extensions'] = $extensions;
  $mmt_config['mmturl'] = $mmturl;
  $mmt_config['repo_type'] = $repo_type; // 0 -> archives, 1 -> single archive, 2 -> source folder
  

  if ($repo_type == 2) { //source folder
    $pair = explode(' ',$repo_opt);
    $archiveName = trim($pair[0]);
    $mmt_config['repo_options'] = $archiveName;
    $mmt_config['docbases'][$archiveName] = trim($pair[1]);
  }

  

  variable_set("mmt_config", $mmt_config);
}



