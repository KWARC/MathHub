/*
 * converts (virtual) filesystem filepath to MMT document path
 */
function mmt_get_doc_path($file) {
  $archives = array(
    'smglo' => 'http://docs.omdoc.org/smglo/',
    'latin' => 'http://docs.omdoc.org/latin/',
    'urtheories' => 'http://docs.omdoc.org/urtheories/' ,
    'openmath' => 'http://www.openmath.org/',
    ); //hardcoded for now, get be gotten from MMT using archive name

  //getting archive and fragment path
  $parts = explode('/', $file); //format is <archive-name>/source/<fragment path>
  $base = $archives[$parts[0]];
  $fragParts = array_slice($parts, 2);
  $srcFrag = join('/', $fragParts);

  //changing extension to .omdoc since that is the path of compilation result
  $parts = explode('.', $srcFrag);
  if (count($parts) > 1) { 
    $parts[count($parts) - 1] = "omdoc"; 
  }
  $srcFrag = join(".", $parts); 

  //return MMT doc path
  return $base . $srcFrag;
}

function mmt_get_format($location) {
  $parts = explode('.', $location);
  $ext = $parts[count($parts) - 1];
  return $ext;  
}


