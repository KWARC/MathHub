  $dpath = $uri;
  if (count($comps) > 1) { //module
	  $node_type = 'mmt_module';
    $dpath = $comps[0] . "/" . $comps[1];

    $newnode = (object) array(
      'type' => $node_type,
      'uid' => 0,
      'created' => strtotime("now"),
      'changed' => strtotime("now"),
      'status' => 1,
	    'comment' => 2,
 	    'promote' => 0,
      'moderate' => 0,
      'sticky' => 0,
      'language' => 'und'  
    ); 
    $newnode->title = $name;
    $newnode->uri = $uri;
    node_object_prepare($newnode);//necessary ?
    node_save($newnode);
    return $newnode->nid;
 } else {
  return -1;
 }
