function mmt_get_doc_path($file) {
  $srcFrag = substr($file,7); //removing 'source/' 
  //this should be gotten from META-INF on a per-archive basis
  $base = 'http://docs.omdoc.org/smglo/';
  return $base . $srcFrag;
}

