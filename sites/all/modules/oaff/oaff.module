/**
 * Function to setup OAFF-specific functionality (CSS & JS) on page
 * OAFF-feature modules (e.g. MMT) define their own initialize methods 
 * to load further features (e.g. JOBAD modules)
 * Typically called from hook_node_view (i.e. for OAFF, oaff_node_view)
 */
function oaff_initialize() {
    libraries_load("jobad");
    // modules are loaded in specific oaff extensions (e.g. MMT)
    $inst_name = jobad_initialize();
    mmt_initialize(); //TODO find out why this is needed for glossary
    return $inst_name; 
}

/**
 * Implements hook_node_view
 * @param $node The node that is being assembled for rendering.
 * @param $view_mode The $view_mode parameter from node_view() (e.g. "full").
 * @param $langcode The language code used for rendering.
 */
function oaff_node_view($node, $view_mode, $langcode) {
  if ($view_mode != "full")
		return;
 
  $oaff_config = variable_get('oaff_config');
  //handling node rendering
  global $filter_context;
  $compiled_node_types = $oaff_config['compiled_node_types'];
  $all_node_types = $oaff_config['all_node_types'];
  
  if (drupal_get_path_alias("node/" . $node->nid) == 'mh/glossary') {
    $markup = file_get_contents("/var/data/localmh/MathHub/glossary.html");
    /* CSS */
    $mmt_path = drupal_get_path('module', 'mmt');
    $mmt_config = variable_get('mmt_config');
    $mmt_url = $mmt_config['mmturl'];  

    
    drupal_add_css($mmt_path . '/css/mmt.css', array('weight' => PHP_INT_MAX, 'every_page' => false));
    
    /* JavaScript */
    drupal_add_js('var mmtUrl = "' . $mmt_url . '";', 'inline');
    jobad_add_module($mmt_path . '/jobad/planetary-navigation.js', "kwarc.mmt.planetary.navigation");
    jobad_add_module($mmt_path . '/jobad/hovering.js', "kwarc.mmt.hovering");

    // if search enabled
    // jobad_add_module($mmt_path . '/jobad/search.js', "kwarc.mmt.search");

    // mmt js libs
    drupal_add_js($mmt_path . '/utils/mmt-html.js', 'file', array('cache' => false));
    drupal_add_js($mmt_path . '/utils/mmt-planetary.js', 'file', array('cache' => false));
    drupal_add_js($mmt_path . '/utils/mathml.js', 'file', array('cache' => false));
    
    // modules
    $inst_id = oaff_initialize();
    $node->content['body'][0]['#markup'] = '<div id="' . $inst_id . '" class="bootstrap" >' . $markup . '</div>';
  }

  if (in_array($node->type, $all_node_types)) {
    oaff_set_breadcrumb($node->nid);
  }
  if (in_array($node->type, $compiled_node_types)) {
    $location = $node->field_external['und']['0']['path'];
    $pathinfo = oaff_get_path_info($location);
    $archive = $pathinfo['archive'];
    $group = $pathinfo['group'];
    $rel_path = $pathinfo['rel_path'];
    drupal_add_js("var oaff_node_group = '$group';", "inline");
    drupal_add_js("var oaff_node_archive = '$archive';", "inline");
    drupal_add_js("var oaff_node_rel_path = '$rel_path';", "inline");
  	if (isset($filter_context['failed']) && $filter_context['failed']) { // time to report errors
      
      $omdoc_location = $pathinfo['alias'];
      $omdoc = ""; //default
      if (planetary_repo_stat_file($omdoc_location)) { //omdoc exists
        $omdoc = planetary_repo_load_file($omdoc_location);
      }
      $inst_id = oaff_initialize();
      $source = $filter_context['source'];
      $output = oaff_mark_source_errors(check_plain($source), $filter_context['status'],$node->nid, $omdoc);

      $node->content['field_external'][0]['content']['#markup'] =  
         '<div id="' . $inst_id . '" class="bootstrap" >' . $output . '</div>';      
      oaff_save_error_status($node->nid, $filter_context['status']);// mark this node as having an error
    } else {
    	if (oaff_has_errors($node->nid)) {// must mark this as fixed
        db_delete('oaff_errors')
  			  ->condition('nid', $node->nid)
  		    ->execute();
      }
	    $inst_id = oaff_initialize();
	    $content = $node->content['field_external'][0]['content']['#markup'];
	    $node->content['field_external'][0]['content']['#markup'] = 
      '<div id="' . $inst_id . '" class="bootstrap" >' . $content . '</div>' . 
      oaff_svg_html($pathinfo) . '<div id="dynamic_modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="max-width:80%">
      <div id="dynamic_modal_content" class="modal-content">    
      </div>
    </div>  
  </div>';
	  }
  }
}

function oaff_svg_html($pathinfo) {
  $relpath = $pathinfo['rel_path'];
  $args = explode(".", $relpath);
  if (count($args) == 1) {
    $svgname = oaff_join_path(array($relpath, ".svg"));
  } else {
    array_pop($args);
    $svgname = implode(".",$args) . ".svg";
  }
  $svg_path = planetary_repo_access_rel_path(oaff_join_path(array($pathinfo['group'], $pathinfo['archive'], "export/svg/narration", $svgname)));
  $svg_content = file_get_contents($svg_path);
  $out = '<div id="svg_modal" class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" style="max-width:80%">
      <div class="modal-content">    
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title" id="myModalLabel">' . $pathinfo['filename'] . '</h4>
         </div>
        <div class="modal-body" style="overflow:auto"> ' .
          $svg_content .
       '</div>
      </div>
    </div>  
  </div>';
  /*
         <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
  */
  return $out; 
}


/**
 * function to check if an OAFF node has an error (during compilation)
 * @param $nid the id of the node that is being checked
 * @return true if node compilation has failed last time, false otherwise
 */
function oaff_has_errors($nid) {
  $result =  $result = db_select('oaff_errors', 'e')
    ->fields('e')
    ->condition('nid', $nid, '=')
    ->execute()
    ->fetchAll();
  return (count($result) > 0);
}


function oaff_save_error_status($nid, $status) {
  if (oaff_has_errors($nid)) { // delete any pre-existing status
     db_delete('oaff_errors')
          ->condition('nid', $nid)
          ->execute();
  }
  $type_map = array("Info" => 0, "Warning" => 1, "Error" => 2, "Fatal" => 3);
  foreach ($status as $compiler => $compiler_state) {
    foreach ($compiler_state['messages'] as $msg) {
      $short_msg = $msg['shortMsg'];
      if (strlen($short_msg) > 1000) {// limiting size to under 1023 to fit in db
        $short_msg = substr($short_msg, 0, 1000) . " ...";
      }
      db_insert('oaff_errors') 
      ->fields(array(
        'nid' => $nid,
        'type' => $type_map[$msg['type']], 
        'compiler' => $compiler,
        'short_msg' => $short_msg))
      ->execute();
    }
  }
}

/**
 * function to mark errors, annotates source string with error information
 * @param $source the source string
 * @param $status the compilation status (containing error information)
 * @param $nid the node id
 * @param $omdoc optionally, the content of the omdoc file (empty string otherwise)
 * @return the processed string (with errors marked)
 */
function oaff_mark_source_errors($source, $status, $nid, $omdoc) {

  $color_catalog = array("Error" => "#FF8888", "Warning" => "#BBBB00", "Fatal" => "#FF3333", "Info" => "#9999FF");
  // creating log
  $log = '<div> <p style="color:red"> Conversion Failed <a style="cursor:pointer;" onclick="if ($(this).html() == \'Show Log\') {$(this).html(\'Hide Log\')} else {$(this).html(\'Show Log\')}; $(\'#oaff_error_log\' ).toggle( \'fold\' );" >Show Log</a> ';
  if ($omdoc != "") {
    $log .= ' <a style="cursor:pointer;" onclick="if ($(this).html() == \'Show OMDoc\') {$(this).html(\'Hide OMDoc\')} else {$(this).html(\'Show OMDoc\')}; $(\'#oaff_omdoc_log\' ).toggle( \'fold\' );" >Show OMDoc</a> ';
  }
  $log .= '</p> </div>';
  $log .= '<div id="oaff_error_log" style="display: none;"><ul>';
  foreach ($status as $filter_name => $filter_status) {
    foreach ($filter_status['messages'] as $msg) {
      $log .= "<li>";
      $srcref_msg = '';
      if (isset($msg['srcref'])) {
        $srcref_msg .= 'at ';
        $srcref_msg .= $msg['srcref']['from']['line'] . "." . $msg['srcref']['from']['col'] . "-" ;
        $srcref_msg .= $msg['srcref']['to']['line'] . "." . $msg['srcref']['to']['col'];
      }

      $short_msg = check_plain($msg['shortMsg']);
      $long_msg = check_plain($msg['longMsg']);
      $color = $color_catalog[$msg['type']];
      $log .= "<p><u style=\"color:{$color}\"> {$msg['type']} $srcref_msg </u> : $short_msg </p>";
      $log .= "<pre> $long_msg </pre>";
      $log .= "</li>"; 
    }
  }
  $log .= "</ul></div>";

  if ($omdoc != "") {
      $log .= '<div id="oaff_omdoc_log" style="display: none;"><pre>' . check_plain($omdoc) . "</pre></div>";
  }
  //wrapping lines with ids for later referencing
  $lines = explode("\n", $source);
  $new_lines = array();
  $line_offsets = array(0);
  $i = 0;
  while ($i < count($lines)) {
    $new_lines[] = "<span id=\"src_line_$i\"> {$lines[$i]} </span>";
    $line_offsets[] = $line_offsets[$i] + strlen($lines[$i]);
    $i += 1;
  }
  $source = implode("\n", $new_lines);

  foreach ($status as $filter_name =>$filter_status) {
    foreach ($filter_status['messages'] as $msg) {
      if (isset($msg['srcref'])) {
        $from_line = $msg['srcref']['from']['line']; 
        $from_col = $msg['srcref']['from']['col'];
        $from = $line_offsets[$from_line - 1] + $from_col; //-1 since arrays start at 0, line numbers at 1
        $to_line = $msg['srcref']['to']['line'];
        $to_col = $msg['srcref']['to']['col'];
        $to = $line_offsets[$to_line - 1] + $to_col; //-1 since arrays start at 0, line numbers at 1
        $selector="#src_line_$from_line";

        drupal_add_js('
          jQuery(function(){
            JOBAD1.Sidebar.registerNotification($("' . $selector . '"), 
              { 
                "class": "' . strtolower($msg['type']) .'",
                "text": "' .  $msg['shortMsg'] . '", 
                "click": function() {
                  window.open("/node/'.$nid.'/edit?start=' . $from . '&end=' . $to . '");
                }
            });
          });', array('type' => 'inline', 'weight' => 100));
      }
    }
  }
  

  // creating error highlighting in source (disabled curently due to bad source refs)
  /*
  foreach ($status as $filter_name => $filter_status) {
    foreach ($filter_status['messages'] as $msg) {
      $lines = explode("\n", $source);
      if (!isset($msg['srcref'])) {
        $msg['srcref'] = array("from" => array("line" => 1, "col" =>  0),
                               "to" => array("line" => count($lines) - 2 , "col" =>  -1));
      } 
  	  $from_line = $msg['srcref']['from']['line']; 
  	  $from_col = $msg['srcref']['from']['col'];
  	  $to_line = $msg['srcref']['to']['line'];
  	  $to_col = $msg['srcref']['to']['col'];

      $before = substr($lines[$to_line], 0, $to_col);
      $after = substr($lines[$to_line], $to_col);
      $lines[$to_line] = $before . '</span>' . $after;
  	  $before = substr($lines[$from_line], 0, $from_col);
  	  $after = substr($lines[$from_line], $from_col);
  	  $lines[$from_line] = $before . '<span style="background:' . $color_catalog[$msg['type']] .'" title="' . $msg['type'] . ': ' . $msg['shortMsg'] . '">' . $after;
  	  $source = join("\n", $lines);
  	}
  }
  */
  return "<pre>\n" . $source . "\n</pre>" . $log;
}


