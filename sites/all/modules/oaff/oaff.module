function __oaff_generate_html_list($elems) {
  $body = '<ul>';
  foreach ($elems as $name => $link) {
    $body .= '<li> <a href="/' . $link . '">' . $name . '</a></li>';
  }
  $body .= '</ul>';
  return $body;
}

function oaff_autogenerate_top_doc() {
  $groups = planetary_repo_list("");
  $elems = array();
  foreach ($groups as $group) {
    if (planetary_repo_is_dir($group) && $group[0] != '.' && $group != "meta" && drupal_lookup_path('source', $group)) {
      $elems[$group] = $group;
    }
  }
  $html = __oaff_generate_html_list($elems);
  return $html;
}

function oaff_autogenerate_group_doc($group) {
  $archives = planetary_repo_list($group);
  $oaff_config= variable_get('oaff_config');
  $html = '<ul>';
  foreach ($archives as $archive) {
    $arch_path = oaff_join_path(array($group, $archive));
    if (planetary_repo_is_dir($arch_path) && $archive[0] != '.' && $archive != "meta-inf" && drupal_lookup_path('source', $arch_path)) { //valid archive
      $oaff_config = variable_get('oaff_config');
      $arch_info = $oaff_config['archives'][$arch_path];
      $name = $arch_path; // default
      if (isset($arch_info['name'])) {
        $name = $arch_info['name'];
      }
      $desc = ""; // default    
      if (isset($arch_info['description'])) {
        $desc = $arch_info['description'];
      }

      $html .= '<li> <a href="/' . $arch_path . '">' . $name .  ' </a>  <small> '. $desc .' </small></li>';
    }
  }
  $html .= "</ul>";
  return $html;
}

function oaff_autogenerate_archive_doc($group, $archive) {
  $arch_path = oaff_join_path(array($group, $archive));
  $html = "";
  $oaff_config= variable_get('oaff_config');
  print_r($oaff_config['archives']);
  $arch_info = $oaff_config['archives'][$arch_path];
  $name = $arch_path; // default
  if (isset($arch_info['name'])) {
    $name = $arch_info['name'];
  }
  $desc = ""; //default
  if (isset($arch_info['description'])) {
    $desc = $arch_info['description'];
  }
  $html .= $desc;

  $html .= "<ul><li><a href=\"/$group/$archive/source\">Content</a> </li><li><a href=\"http://gl.mathhub.info/$group/$archive\" target=\"_blank\">Sources</a> </li></ul>";

  return $html;
}


/**
 * implements hook_filed_formatter view, 
 * @param $entity_type The type of $entity
 * @param $entity The entity being displayed
 * @param $field The field structure
 * @param $instance The field instance
 * @param $langcode The language associated with $items
 * @param $items Array of values for this field
 * @param $display The display settings to use, as found in the 'display' entry of instance definitions
 */
function oaff_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $element = array();
  switch ($display['type']) {
    case 'oaff_help_formatter':
      $lang = $entity->language;
      foreach ($items as $delta => $item) {
        $location = $item['path'];
        if (planetary_repo_stat_file($location)) {
          $markup = planetary_repo_load_file($location);
        } else {
          drupal_set_message("Help File missing or empty, auto-generating description", 'warning');
          $segs = explode("/", $location); //format is "$base" / "help" / "index.html"
          if ($segs[0] == 'meta') { //at top level
            $markup = oaff_autogenerate_top_doc();
          } else if ($segs[1] == 'meta-inf') { //at group level
            $group = $segs[0];
            $markup = oaff_autogenerate_group_doc($group);
          } else { //at archive level
            $group = $segs[0];
            $archive = $segs[1];
            $markup = oaff_autogenerate_archive_doc($group, $archive);
          }
        }
        $element[$delta] = array(
          "#type" => "container",
          "#attributes" => array(),
          "content" => array(
            '#markup' => $markup,
          )
        );
      }
      break;
    }
  return $element;
}

function oaff_form_alter(&$form, &$form_state, $form_id) {
  if ($form_id == 'oaff_doc_node_form') {
    $nid = $form['#node']->nid;
    $elems = oaff_get_language_group($nid);
    $lang_dict = array('und' => 'base', 'de' => 'deutsch', 'en' => 'english');

    if (isset($_GET['start']) && isset($_GET['end'])) {
      $start = $_GET['start'];
      $end = $_GET['end'];
      $lang = $lang_dict[$form['#node']->language];
      drupal_add_js('
        jQuery(function() {
          var mytxt = jQuery("#edit-' . $lang .' .form-textarea").get(0);
          mytxt.focus();
          mytxt.setSelectionRange(' .$start. ',' .$end.');
        });
        ', 'inline');
    }

    // sorting alphabetically (excluding extension)
    usort($elems, function($a, $b) {
      return strcmp(pathinfo($a->location)['filename'], pathinfo($b->location)['filename']);
    });
    $bid = $elems[0]->lid; // based doc

    $form['variants'] = array(
      '#type' => 'hidden',
      '#value' => array(),
    );  
    foreach ($elems as $elem) {
      $location = $elem->location;
      $lid = $elem->lid;
      $path_info = oaff_get_path_info($location);
      $lang = $lang_dict[$path_info['lang']];
      $form['variants']['#value'][] = $lang;
      if ($bid == $lid) {
        $form['module'] = array(
        '#type' => 'textfield',
        '#title' => 'Module Name',
        '#default_value' => $path_info['base_module'],
        '#disabled' => true,
        '#description' => t(' The base name of module'),
      );
      }

      $form['content'][$lang] = array(
          '#type' => 'fieldset',
          '#collapsible' => true,
          '#title' => $lang,
          '#collapsed' => ($nid != $lid),
          '#tree' => true,
      );
      $form['content'][$lang]['location'] = array(
        '#type' => 'hidden',
        '#value' => $location,
        );
      $form['content'][$lang]['body'] = array(
        '#type' => 'text_format',
        '#title' => 'Body',
        '#format' => 'stex',
        '#default_value' => planetary_repo_load_file($location),
        '#description' => t(' The body of the ' .  $lang . ' language version '),
      ); 
    }
    unset($form['field_external']);
    unset($form['title']);
    $form['actions']['submit']['#submit'] = array('oaff_mathhub_doc_act');
    $form['#submit'] = array('oaff_mathhub_doc_submit');
  }
}



function oaff_mathhub_doc_submit($form, $form_state) {
